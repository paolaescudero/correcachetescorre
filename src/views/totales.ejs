<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'The answer'}) %>
<body>

<div class="container">

    <% if (locals.user){ %> 
        <!-- busca el resultado del usuario que lo esta usando -->
        <% result.forEach( user => {%> 
